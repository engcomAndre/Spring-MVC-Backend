package com.andre.cursomc.services;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.andre.cursomc.domain.Categoria;
import com.andre.cursomc.repositories.CategoriasRepository;

@Service
public class CategoriaService {
	@Autowired
	private CategoriasRepository catrepo;
	
	public Categoria buscar(Integer id) {
		return Categoria obj = catrepo.findOne(id);
		
	}

}
